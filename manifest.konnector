{
  "version": "1.0.0",
  "name": "Cozy Verisure Konnector",
  "type": "konnector",
  "language": "node",
  "icon": "verisure.png",
  "slug": "verisure",
  "source": "git@github.com:Adrik-o/cozy-verisure-konnector.git",
  "editor": "Adrik-o",
  "vendor_link": "https://customers.securitasdirect.fr",
  "categories": ["others"],
  "frequency": "monthly",
  "fields": {
    "login": {
      "type": "text"
    },
    "password": {
      "type": "password"
    },
	"advancedFields": {
      "installNumber": {
        "advanced": true,
        "isRequired": false
      }
